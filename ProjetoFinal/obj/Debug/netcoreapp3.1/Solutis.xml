        <member name="M:Solutis.Controllers.BookController.Post(Solutis.Data.VO.BookVO)">
             <summary>
             Insert/create a specific book. *Requires authentication*
             </summary>
             <remarks>
             Sample request:
            
                 POST /book
                 {
                    "isbn": "9788502180260",
                    "price": "45",
                    "category": "Programação" 
                 }
            
             </remarks>      
        </member>
        <member name="M:Solutis.Controllers.BookController.Put(Solutis.Data.VO.BookVO)">
             <summary>
             Change information for a specific book. *Requires authentication*
             </summary>
             <remarks>
             Sample request:
            
                 PUT /book
                 {
                    "id": "2"    
                    "isbn": "9788502180260",
                    "price": "55,60",
                    "category": "Programação" 
                 }
            
             </remarks>
        </member>
        <member name="M:Solutis.Controllers.BookController.Delete(System.Int64)">
             <summary>
             Deletes a specific book. *Requires authentication level manager*
             </summary>
             <remarks>
             Sample request:
            
                 DELETE /book/v1/2
                 {
                    "id": "2"    
                    "isbn": "9788502180260",
                    "price": "55,60",
                    "category": "Programação" 
                 }
            
             </remarks>
        </member>
        <member name="M:Solutis.Controllers.LoginController.Authenticate(Solutis.Model.User)">
             <summary>
             Returns the generated token for valid users.
             </summary>
             <remarks>
             Sample request:
            
                 POST /login
                 {
                    "username": "elayne",
                    "password": "123",
                 }
            
             </remarks>
